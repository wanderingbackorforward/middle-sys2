{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/frontend/assets/$1" },
    { "src": "/(.*)\\.(.*)", "dest": "/frontend/$1.$2" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ]
}
