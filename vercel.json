{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "includeFiles": ["backend-flask/**"] }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ],
  "env": {
    "SUPABASE_URL": "",
    "SUPABASE_SERVICE_KEY": "",
    "USE_SUPABASE": "1"
  }
}
